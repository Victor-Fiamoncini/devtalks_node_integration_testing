{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
			"@app/*": ["./src/app/*"],
			"@domain/*": ["./src/domain/*"],
			"@infra/*": ["./src/infra/*"],
			"@main/*": ["./src/main/*"]
		},
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
	"include": [
		"src"
	]
}
